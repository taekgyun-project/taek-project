<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<!-- /SPRING_AOP/src/main/java /config/mybatis -->
	<properties resource="config/mybatis/oracle.properties" />
	<!-- oracle null 처리 -->

	<settings>
		<setting value="false" name="cacheEnabled" />
		<setting value="NULL" name="jdbcTypeForNull" />
		<!-- <setting value="LOG4J" name="logImpl" /> -->
	</settings>

	<!-- TypeAliases<typeAliases><typeAlias alias="userVO" type="com.biz.user.UserVO" 
		/></typeAliases> -->


	<!-- DBCP -->

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property value="${driver}" name="driver" />
				<property value="${url}" name="url" />
				<property value="${id}" name="username" />
				<property value="${pw}" name="password" />
			</dataSource>
		</environment>
	</environments>


	<mappers>
		<mapper resource="config/mybatis/member-map.xml" />
		<mapper resource="config/mybatis/shop-map.xml" />
	</mappers>

</configuration>